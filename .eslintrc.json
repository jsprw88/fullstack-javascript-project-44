{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": { 
    "no-unused-vars": "warn", 
    "quotes": ["error", "single"], 
    "semi": ["error", "never"], 
    "no-undef": "warn", 
    "prettier/prettier": "error", 
    "no-console": "off",
    "no-plusplus": "off", 
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "always"
      }
    ]
  }
}